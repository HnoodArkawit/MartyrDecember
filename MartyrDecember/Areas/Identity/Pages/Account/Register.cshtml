@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<style type="text/css">

    .regform {
        background-color: rgb(0,0,0,6);
        margin: auto;
        color: #ffffff;
        padding: 10px 0px 10px 0px;
        text-align: center;
        border-radius: 15px 15px 0px 0px;
        font-family: MyFont;
    }
</style>

<div class="container" style="padding:150px 40px 150px 40px;direction: rtl;">
    <div class="item" style="display:  revert;">
        <p class="lead" style="margin: 5px;padding-top:0px;text-align: center;">
            أتعهد بان لا أضيف إلا شهداء ثورات ألسودان
        </p>
    </div>

    <div id="contact" style="padding:0px">
        <div class="regform"><h1>انشاء حساب</h1></div>
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" style="padding:30px;">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="container">
                <div class="row">
                    <div class="col-md-6 col-lg-6" style="padding: 10px;">
                        <label asp-for="Input.FirstName" style="color: white;"></label>
                        <input asp-for="Input.FirstName" class="form-control" maxlength="20" />
                        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 col-lg-6" style="padding: 10px;">
                        <label asp-for="Input.LastName" style="color: white;"></label>
                        <input asp-for="Input.LastName" class="form-control" maxlength="20" />
                        <span asp-validation-for="Input.LastName" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12" style="padding: 10px;">
                        <label asp-for="Input.Email" style="color: white;"></label>
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 col-lg-6" style="padding: 10px;">
                        <label asp-for="Input.Password" style="color: white;"></label>
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 col-lg-6" style="padding: 10px;">
                        <label asp-for="Input.ConfirmPassword" style="color: white;"></label>
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <hr />
            <div class="container">
                <div class="row">
                    <div class="col-md-6 col-xs-6 col-lg-6" style="padding: 10px;">
                        <input type="submit" value="تسجيل" class="btn btn-outline-success col-12" style="height:40px;color:#fff;font-size:18px;border-radius:20px;text-align:center;font-family:MyFont;" />
                    </div>
                    <div class="col-md-6 col-xs-6 col-lg-6" style="padding: 10px;">
                        <a href="~/Home/Index" class="btn btn-outline-info col-12" style="height:40px;color:#fff;font-size:18px;border-radius:20px;text-align:center;font-family:MyFont;">
                            الرجوع للصفحة الرئسية
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
