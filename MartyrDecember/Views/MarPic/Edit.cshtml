@model MartyrDecember_Application.Features.MartyrPicture.Commands.UpdateMartyrPicture.UpdateMartyrPictureCommand

@{
    ViewData["Title"] = "Edit";
}

<div class="container" style="padding:150px 40px 150px 40px;direction: rtl;">
    <div class="row">
        <div class="col-12">
            <form id="contact" asp-action="Edit" enctype="multipart/form-data" style="padding-top:50px;">
                <div class="row">

                    <input type="hidden" asp-for="UserId" class="form-control" />
                    <input type="hidden" asp-for="MarPicId" class="form-control" />

                    <div class="col-lg-4 col-md-4">
                        <fieldset>
                            <label asp-for="MartyrName" class="control-label" style="color: white"></label>
                            <input asp-for="MartyrName" class="form-control" />
                            <span asp-validation-for="MartyrName" class="text-danger"></span>
                        </fieldset>
                    </div>
                    <div class="col-lg-4 col-md-4">
                        <fieldset>
                            <label asp-for="DateMartyr" class="control-label" style="color: white"></label>
                            <input asp-for="DateMartyr" class="form-control" type="date" />
                            <span asp-validation-for="DateMartyr" class="text-danger"></span>
                        </fieldset>
                    </div>
                    <div class="col-lg-8 col-md-8">
                        <fieldset>
                            <label asp-for="Description" class="control-label" style="color: white"></label>
                            <br />
                            @Html.TextAreaFor(model => model.Description, new { @class = "form-control",@id="message",@style="height: 300px;"})
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </fieldset>
                    </div>
                    <div class="col-lg-4 col-md-4">
                        <div>
                            <label asp-for="ImageUrl" class="control-label" style="color: white"></label>
                        </div>
                        @if (Model.ImageUrl != null)
                        {
                            <div class="custom-file-input" style="height:245px;border-radius:10px;position:relative;border:2px dashed #c2cdda;display:flex;align-items:center;justify-content:center;overflow:hidden;">
                                <div class="card" style="position:absolute;display:flex;align-items:center;justify-content:center;">
                                    <img id="FromImeagPrv" alt="profile" class="profile-picture" src="data:image/*;base64,@(Convert.ToBase64String(Model.ImageUrl))" style="width:375px;height: 240px;" />
                                </div>
                            </div>
                        }
                        else
                        {
                            <img id="FromImeagPrv" alt="profile" class="profile-picture" src="~/images/avatar-male.jpg" style="width:100%;height:300px;" />
                        }
                        <div class="card" style="margin-top:20px;width:100%;display:block;border:1px;border-radius:25px;color:#000;font-size:18px;text-transform:uppercase;cursor:pointer;">
                            <input asp-for="ImageUrl" type="file" name="file" class="custom-file-label" id="FLFeonImage" accept="image/*"
                                   onchange="document.getElementById('FromImeagPrv').src=window.URL.createObjectURL(this.files[0])" style="border-radius: 20px;" />
                        </div>
                        <input asp-for="ImageUrl" type="hidden" accept="image/*" class="form-control" />
                        <input type="hidden" asp-for="MarPicId" />
                    </div>
                </div><br />
                <div class="container">
                    <div class="row">
                        <div class="col-md-6 col-xs-12 col-sm-12 col-lg-6" style="padding:10px">
                            <input type="submit" value="تعديل" class="btn btn-outline-success fa fa-edit col-12" style="padding:10px" />
                        </div>
                        <div class="col-md-6 col-xs-12 col-sm-12 col-lg-6" style="padding:10px">
                            <a asp-action="Index" class="btn btn-outline-info fa fa-rotate-back col-12" style="padding:10px">الرجوع للخلف</a>
                        </div>
                    </div>

                </div>

            </form>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(".custom-file-input").on("change", function () {
        var fileName = $(this).val().split("\\").pop();
        $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
    });
</script>

