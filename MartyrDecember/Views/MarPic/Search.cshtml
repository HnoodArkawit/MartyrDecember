<!DOCTYPE html>
<html lang="en">

<body>

@model IEnumerable<MartyrDecember.Domain.MarPic>

@{
    ViewData["Title"] = "Search";
}


<div class="discover-items">
        <div class="container" style="padding:150px 40px 150px 40px;direction: rtl;">
        <div class="row">

                @foreach (var SubItem in Model)
                {

                    <div class="col-lg-3 col-md-6 hvr-bob">
                        <div class="row" style="padding: 10px;">
                            <div class="product-card" tabindex="0">
                                <figure>
                                    <div class="col-12 alert alert-dark" style="background-color: #000;border-radius: 15px 15px 0px 0px;position: relative;width: 100%;margin-bottom:0px;text-align:center;">
                                        <h4>@Html.DisplayFor(modelItem => SubItem.MartyrName)</h4>
                                    </div>
                                    <div class="line-dec"></div>
                                    <div class="col-12">
                                        <img src="data:image/*;base64,@(Convert.ToBase64String(@SubItem.ImageUrl))" alt="" style="height: 50vh;" />
                                    </div>
                                    <div class="line-dec"></div>
                                    <div class="row" style="--bs-gutter-x: 0;">
                                        <div class="col-12 alert alert-dark" style="background-color: #000;border-radius: 0px 0px 15px 15px;position: relative;width: 100%;margin-bottom:0px;text-align:center;">
                                            <h4>@Html.DisplayFor(modelItem => SubItem.DateMartyr)</h4>
                                        </div>
                                    </div>
                                    <div class="place-bid-btn">
                                        @Html.ActionLink("التفاصيل", "Details", new { id = SubItem.MarPicId }, new { @class = "btn btn-dark" })
                                    </div>
                                </figure>
                            </div>
                        </div>
                    </div>
                }
                <br />
        <a href="~/Home/Index" class="btn btn-outline-info col-12">الرجوع للخلف</a>
    </div>
    </div>
</div>
</body>
</html>
