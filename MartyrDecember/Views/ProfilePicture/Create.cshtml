@model MartyrDecember.Application.Features.Profile.Commands.CreateProfile.CreateProfileCommand

@{
    ViewData["Title"] = "Create";
}

<div class="container" style="padding:150px 40px 150px 40px;direction: rtl;">
    <div class="row">
        <div class="col-12">
            <form id="contact" method="post" asp-action="Create" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-12">
                        <div>
                            <label asp-for="ImageUrl" class="control-label"></label>
                        </div>
                        <div class="custom-file-input" style="height:245px;border-radius:10px;position:relative;border:2px dashed #c2cdda;align-items:center;justify-content:center;overflow:hidden;">
                            <div class="image">
                                <img id="FromImeagPrv" alt="profile" class="profile-picture" src="~/assets/images/ImegMartars.jpg" style="border-radius: 7px;height:245px;" />
                            </div>
                        </div>
                        <div class="card" style="margin-top:20px;width:100%;display:block;border:1px;border-radius:25px;color:#000;font-size:18px;text-transform:uppercase;cursor:pointer;">
                            <input asp-for="ImageUrl" type="file" name="file" id="FLFeonImage" accept="image/*"
                                   onchange="document.getElementById('FromImeagPrv').src=window.URL.createObjectURL(this.files[0])" style="border-radius: 20px;" />
                        </div>
                    </div>
                </div><br />
                <div class="container">
                    <div class="row">
                        <div class="col-md-6 col-xs-12 col-sm-12 col-lg-6" style="padding:10px">
                            <input type="submit" value="اضافة" class="btn btn-outline-success fa fa-save col-12" style="padding:10px" />
                        </div>
                        <div class="col-md-6 col-xs-12 col-sm-12 col-lg-6" style="padding:10px">
                            <a asp-action="Index" class="btn btn-outline-info fa fa-rotate-back col-12" style="padding:10px">الرجوع للخلف</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(".custom-file-input").on("change", function () {
        var fileName = $(this).val().split("\\").pop();
        $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
    });
</script>
